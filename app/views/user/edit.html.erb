<%form_for (:user, :url => user_path(@user), :html => {:method => :put}) do |f| %>
<%= error_messages_for :user %>
	<p>
	 <label for="user_username" class="left" style="width:40%;"><b>UserName:</b></label>
	 <%= f.text_field :username %>
	</p>
  <div id="availability_msg"></div>
  <p>
   <label for="user_password" class="left" style="width:40%;"><b>Password:</b></label>
   <%= f.password_field :password %>
  </p>
  <p>
   <label for="user_password_confirmation" class="left" style="width:40%;"><b>Confirm:</b></label>
   <%= f.password_field :password_confirmation %>
  </p>
	<p>
	 <label for="user_firstname" class="left" style="width:40%;"><b>FirstName:</b></label>
	 <%= f.text_field :firstname %>
	</p>
	<p>
	 <label for="user_lastname" class="left" style="width:40%;"><b>LastName:</b></label>
	 <%= f.text_field :lastname %>
	</p>
	<p>
	 <label for="user_email" class="left" style="width:40%;"><b>Email:</b></label>
	 <%= f.text_field :email %>
	</p>
  <p>
   <label for="user_birthdate" class="left" style="width:40%;"><b>BirthDate:</b></label>
   <%= date_select("user", "birthdate", :start_year => 1900, :end_year => Time.now.year, :order => [:day, :month, :year], :include_blank => true) %>       
  </p>
  <p>
   <label for="user_sex" class="left" style="width:40%;"><b>Sex:</b></label>
   <%= select("user", "sex" , User::SEX) %>
  </p>
  <p>
    <%= f.submit "Update" %>
    <%= link_to 'Back', user_path(@user) %>
  </p>
<% end %>
